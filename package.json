{
  "name": "filter-json",
  "version": "1.0.0",
  "description": "This GitHub Action is designed to filter specified values from an input JSON. Its main task is to extract and retain only the desired values based on predefined criteria.",
  "main": "action/index.js",
  "scripts": {
    "test": "yarn build && node ./action/index.js",
    "build": "yarn clean && tsc --project ./tsconfig.json",
    "clean": "rimraf -- action",
    "release": "yarn clean && ncc build -m src/index.ts -o action --license LICENSE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yakubique/filter-json.git"
  },
  "keywords": [
    "npm",
    "github",
    "action",
    "versions"
  ],
  "author": "Vladimir <opa-oz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yakubique/filter-json/issues"
  },
  "homepage": "https://github.com/yakubique/filter-json#readme",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.1",
    "@vercel/ncc": "^0.38.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
